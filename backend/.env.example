# SmartCare+ Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# For Local MongoDB: mongodb://localhost:27017/smartcareplus
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/smartcareplus?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret Key (Use a strong, random string - minimum 32 characters)
JWT_SECRET=your_strong_jwt_secret_key_here_minimum_32_characters_long

# Server Port
PORT=5000

# Node Environment (development or production)
NODE_ENV=development

# Session Secret (for additional security)
SESSION_SECRET=your_strong_session_secret_key_here

# Token Expiration (e.g., 1h, 24h, 7d, 30d)
JWT_EXPIRES_IN=7d

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000
